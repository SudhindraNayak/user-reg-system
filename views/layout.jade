doctype html
html
  head
    title #{title}: Express website
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .container
      .navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
        a.navbar-brand(href='#') Node-Authentication
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarsExampleDefault.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item(class=(title=='Members'?'active':''))
              a.nav-link(href='/')
                | Member 
            li.nav-item(class=(title=='Register'?'active':''))
              a.nav-link(href='/users/register')
                | Register
            li.nav-item(class=(title=='Login'?'active':''))
              a.nav-link(href='/users/login')
                | Login
          ul.navbar-nav.navbar-right
            li.nav-item
              a.nav-link(href='/users/logout')
                | Logout
      .container
        block content
      footer
        p &copy; 2018 All rights reserved

    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
    script.
      window.jQuery || document.write('<script src="../../../../assets/js/vendor/jquery-slim.min.js"><\\/script>')
    script(src='/javascripts/bootstrap.js')

